<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Site Selection Spinner -->
    <Spinner
        android:id="@+id/spinnerSites"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:spinnerMode="dropdown" />

    <!-- Map Fragment -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/spinnerSites"
        android:layout_above="@id/bottomActions"
        android:layout_margin="8dp" />

    <!-- Bottom Actions -->
    <LinearLayout
        android:id="@+id/bottomActions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="8dp">

        <Button
            android:id="@+id/btnAddCheckpoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Checkpoint"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnSavePatrolRoute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Route"
            android:layout_weight="1" />
    </LinearLayout>

</RelativeLayout>
