<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white">

    <!-- Header -->
    <TextView
        android:id="@+id/tvPatrolHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Patrol Activity"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="16dp" />

    <!-- Current Checkpoint -->
    <TextView
        android:id="@+id/tvCurrentCheckpointLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Checkpoint:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_below="@id/tvPatrolHeader"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/currentCheckpointView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvCurrentCheckpointLabel"
        android:layout_marginTop="8dp"
        android:text="Checkpoint 1"
        android:textSize="16sp"
        android:textColor="@color/black" />

    <!-- Next Checkpoint -->
    <TextView
        android:id="@+id/tvNextCheckpointLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/currentCheckpointView"
        android:layout_marginTop="16dp"
        android:text="Next Checkpoint:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/nextCheckpointView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvNextCheckpointLabel"
        android:layout_marginTop="8dp"
        android:text="Checkpoint 2"
        android:textSize="16sp"
        android:textColor="@color/black" />

    <!-- Patrol Progress -->
    <TextView
        android:id="@+id/tvPatrolProgressLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nextCheckpointView"
        android:layout_marginTop="16dp"
        android:text="Patrol Progress:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black" />

    <ProgressBar
        android:id="@+id/patrolProgressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvPatrolProgressLabel"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:indeterminate="false"
        android:progress="0"
        android:max="100"
        android:progressTint="@color/green" />

    <!-- Complete Button -->
    <Button
        android:id="@+id/btnCompletePatrol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Complete Patrol"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@color/blue"
        android:layout_marginTop="24dp"
        android:visibility="gone" />

</RelativeLayout>
